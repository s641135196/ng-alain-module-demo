{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@shared": ["app/shared/index"],
      "@delon": ["app/delon"],
      "@shared/*": ["app/shared/*"],
      "@core": ["app/core/index"],
      "@core/*": ["app/core/*"],
      "@env/*": ["environments/*"]
    }
  }
}
